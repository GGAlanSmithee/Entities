{
  "name": "Entities",
  "description": "easy-to-use Entity-Component System in JavaScript",
  "version": "1.0.0",
  "author": {
    "name": "Alan Smithee",
    "email": "ggnore.alan.smithee@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GGAlanSmithee/Entities"
  },
  "keywords": [
    "javascript",
    "ces",
    "ecs",
    "entity",
    "component"
  ],
  "directories": {
    "dist": "dist",
    "src": "src"
  },
  "main": "dist/entities.js",
  "scripts": {
    "babelify": "browserify -t babelify ./build/entities.js --s Entities > ./dist/entities.js -d",
    "bundle": "node ./build/bundle",
    "clean": "./node_modules/.bin/rimraf ./dist/*",
    "jshint": "jshint ./src/core",
    "test": "./node_modules/.bin/istanbul cover _mocha test/* -- --recursive --compilers js:babel/register -R dot",
    "uglify": "./node_modules/.bin/uglifyjs ./dist/entities.js -o ./dist/entities.min.js -c -m",
    
    "prebuild": "npm run jshint && npm run clean && npm run bundle",
    "build": "npm run babelify",
    "postbuild": "./node_modules/.bin/rimraf ./build/entities.js && npm run uglify"
  },
  "devDependencies": {
    "babel": "^5.5.7",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "copyfiles": "^0.2.1",
    "esperanto": "^0.7.2",
    "istanbul": "^0.3.15",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "rimraf": "^2.4.0",
    "sinon": "^1.15.3",
    "uglify-js": "^2.4.24"
  }
}
