{
  "name": "gg-entities",
  "description": "easy-to-use Entity-Component System in JavaScript",
  "version": "1.1.0",
  "author": {
    "name": "alansmithee",
    "email": "ggnore.alan.smithee@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GGAlanSmithee/Entities"
  },
  "keywords": [
    "javascript",
    "ces",
    "ecs",
    "entity",
    "component"
  ],
  "directories": {
    "dist": "dist",
    "src": "src"
  },
  "main": "dist/gg-entities.js",
  "jsnext:main": "src/gg-entities.js",
  "scripts": {
    "test": "istanbul cover _mocha test/* -- --recursive --compilers js:babel/register -R dot",
    "prebuild": "eslint src",
    "build": "mkdir -p dist && rollup src/gg-entities.js | babel -m umd --module-id GGEntities -o dist/gg-entities.js",
    "deploy": "npm run build && uglifyjs ./dist/gg-entities.js -o ./dist/gg-entities.min.js -c -m"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-eslint": "^4.1.0",
    "chai": "^3.2.0",
    "eslint": "^1.2.1",
    "istanbul": "^0.3.17",
    "mocha": "^2.2.5",
    "rollup": "^0.14.1",
    "sinon": "^1.15.4",
    "uglify-js": "^2.4.24"
  }
}
