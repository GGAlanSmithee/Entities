{
  "name": "Entities",
  "version": "0.0.1",
  "description": "efficient and easy-to-use Entity-Component System in JavaScript",
  "main": "Gruntfile.js",
  "scripts": {
    "babelify"  : "browserify -t babelify ./build/entities.js --s Entities > ./dist/entities.js -d",
    "bundle"    : "node ./build/bundle",
    "clean"     : "./node_modules/.bin/rimraf ./dist/*",
    "jshint"    : "jshint ./src/core",
    "test"      : "./node_modules/.bin/istanbul cover _mocha test/* -- --recursive --compilers js:babel/register -R dot",
    "polyfill"  : "./node_modules/.bin/copyfiles -f ./node_modules/babel/node_modules/babel-core/browser-polyfill.js ./node_modules/babel/node_modules/babel-core/browser-polyfill.min.js dist",
    
    "prebuild"  : "npm run jshint && npm run clean && npm run bundle",
    "build"     : "npm run babelify",
    "postbuild" : "./node_modules/.bin/rimraf ./build/Entities.js && npm run polyfill"
  },
  "directories": {
    "examples": "examples"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GGAlanSmithee/Entities"
  },
  "keywords": [
    "javascript",
    "ces",
    "ecs",
    "entity",
    "component"
  ],
  "author": "Alan Smithee",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.5.7",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "copyfiles": "^0.2.1",
    "esperanto": "^0.7.2",
    "istanbul": "^0.3.15",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "rimraf": "^2.4.0",
    "sinon": "^1.15.3"
  }
}
